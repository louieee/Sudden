version: "3"


services:
  chufa:
    build: .
    ports:
      - "9000:9000"
    command: ['/bin/bash', 'bash.sh']
    volumes:
      - ./app
    depends_on:
      - pgdb
    environment:
      SECRET_KEY: SECRET
      DEBUG: 1
      POSTGRES_DB: DB
      POSTGRES_USER: USER
      POSTGRES_PASSWORD: PASSWORD
      POSTGRES_HOST: HOST
      POSTGRES_PORT: PORT

  pgdb:
    image: postgres:alpine
    container_name: postgres_deut
    ports:
    - "5432:5432"
    environment:
      POSTGRES_PASSWORD: PASSWORD
      PGDATA: /var/lib/postgresql/data/pgdata
